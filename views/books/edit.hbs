<div class='wrapper'>
	<form action='/books/{{_id}}/edit' method='POST'>

		<div class='create-book'>
			<h2>{{title}}</h2>
			<label for='title'>Title</label>
			<input type='text' name='title' value='{{title}}' />

			<label for='author'>Author</label>
			<input type='text' name='author' value='{{author}}' />

			<label for='rating'>Rating</label>
			<input type='number' name='rating' value='{{rating}}' min='0' id='number' />

			<label for='description'>Description</label>
			<textarea name='description' cols='100' rows='10'>{{description}}</textarea>

			<button class='button orange'>Update</button>

			<a href='javascript: history.back()' class='big-anchor'>Go Back</a>
		</div>
	</form>

</div>

<script>

	const number = document.getElementById('number'); number.onkeydown = function(e) { if(!((e.keyCode > 95 && e.keyCode <
	106) || (e.keyCode > 47 && e.keyCode < 58) || e.keyCode == 8)) { return false; } }
</script>
